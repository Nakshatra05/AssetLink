# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/assetlink

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# Arweave Configuration (optional)
ARWEAVE_HOST=arweave.net
ARWEAVE_PORT=443
ARWEAVE_PROTOCOL=https
ARWEAVE_WALLET_KEY={"kty":"RSA","n":"..."}

# Blockchain Configuration
KADENA_NETWORK_ID=testnet04
KADENA_CHAIN_ID=1
KADENA_API_HOST=https://api.testnet.chainweb.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Admin Configuration
ADMIN_WALLETS=0x742d35Cc6634C0532925a3b8D4C0532925a3b8D4,0x8ba1f109551bD432803012645Hac136c0532925a

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://assetlink.vercel.app

# Logging
LOG_LEVEL=info
LOG_FILE=logs/assetlink.log
